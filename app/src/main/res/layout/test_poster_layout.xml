<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/test">

    <ImageView
        android:id="@+id/testposter1"
        android:paddingTop="8dp"
        android:layout_width="180dp"
        android:layout_height="250dp"
        tools:layout_width="200dp"
        tools:layout_height="300dp"
        tools:background="@drawable/interstellarimg"
        android:layout_alignTop="@+id/testposter2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/testposter2"/>

    <ImageView
        android:id="@+id/testposter2"
        android:paddingBottom="8dp"
        android:layout_width="180dp"
        android:layout_height="250dp"
        tools:layout_width="200dp"
        tools:layout_height="300dp"
        tools:layout_toRightOf="@+id/testposter1"
        tools:background="@drawable/whiplashimg"
        android:layout_toEndOf="@+id/testposter1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/testposter1"/>
</RelativeLayout>
